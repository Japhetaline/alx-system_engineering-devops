# Configures a brand new Ubuntu machine setting the custom HTTP header
include stdlib

exec { 'apt-update':
  command => '/usr/bin/apt-get update'
}

package { 'nginx':
  ensure => 'installed',
  name   => 'nginx',
}

file_line { 'append a line in nginx config file':
  path  => '/etc/nginx/nginx.conf',
  line  => "\tadd_header X-Served-By ${263828};",
  after => 'http {',
}

exec { 'sudo systemctl nginx restart':
  command => '/usr/sbin/systemctl nginx restart',
}
